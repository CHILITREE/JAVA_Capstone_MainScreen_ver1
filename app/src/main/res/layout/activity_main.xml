<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include layout="@layout/tool_bar"></include>


    <ImageView
        android:id="@+id/home_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/white"/>


    <Button
        android:id="@+id/home_btn1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@id/home_background"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="@id/home_background"
        android:layout_marginStart="50dp"
        android:text="간병IN"
        android:textSize="25dp"
        android:textStyle="bold"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/home_btn2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/home_btn1"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="@id/home_btn1"
        android:layout_marginLeft="0dp"
        android:drawabletop="@drawable/review.png"
        android:text="질병 리뷰"
        android:textSize="25dp"
        android:textStyle="bold"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/home_btn3"
        android:layout_width="150dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="@id/home_btn1"
        app:layout_constraintStart_toStartOf="@id/home_btn1"
        android:layout_marginStart="160dp"
        android:text="감염병 \n정보"
        android:textSize="25dp"
        android:textStyle="bold"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/home_btn4"
        android:layout_width="310dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/home_btn2"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="@id/home_btn2"
        android:layout_marginStart="0dp"
        android:text="지역별 감염 현황 확인"
        android:textSize="25dp"
        android:textStyle="bold"
        android:backgroundTint="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>